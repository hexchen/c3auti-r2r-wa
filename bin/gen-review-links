#!/bin/bash

hq() {
    declare text="$1"
    text=${text//&/&amp;}
    text=${text//\"/&quot;}
    text=${text//</&lt;}
    text=${text//>/&gt;}
    printf %s "$text"
}

declare -A instances=(
    [CCCV A]=https://test.visit.at.wa-test.rc3.cccv.de/_/global
    [CCCV B]=https://test.visit.at.wb-test.rc3.cccv.de/_/global
    [workadventu.re]=https://play.workadventu.re/_/global
)

cat <<EOF
<html>
<body>
<h1>Review links for branch $(hq $CI_COMMIT_BRANCH)</h1>
<table>
EOF
for room in *.json; do
    cat <<EOF
<tr>
<td>$(hq "${room%.json}")</td>
EOF
    for name in "${!instances[@]}"; do
        url=${instances[$name]}/c3auti.gitlab.io/rc3-wa-rendered/$CI_ENVIRONMENT_SLUG/$room
        cat <<EOF
<td><a href="$(hq "$url")">$(hq "$name")</a></td>
EOF
    done
    cat <<EOF
</tr>
EOF
done
cat <<EOF
</table>
</body>
</html>
EOF
